{
  "variables": {
    "cpus": "1",
    "disk_size": "16384",
    "headless": "false",
    "iso_checksum":
      "8775231d6f56a3d8f116eb64fe048f5cbd2ea0f8c092a1cb7608bcb4106f9c85cb69ce68f53bd381019ab40f1c0316843036daf3fd9107c81c58a240334cc747",
    "iso_checksum_type": "sha512",
    "memory": "512",
    "mirror": "http://cdimage.debian.org/debian-cd",
    "version": "9.3.0",
    "ssh_timeout": "60m",
    "password": "{{env `VSPHERE_PASS`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_additions_mode": "disable",
      "guest_os_type": "Debian_64",
      "iso_url": "{{user `mirror`}}/{{user `version`}}/amd64/iso-cd/debian-{{user `version`}}-amd64-netinst.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-debian-{{user `version`}}-amd64-{{build_type}}",
      "vm_name": "packer-debian-{{user `version`}}-amd64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "net.ifnames=0 ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9.2/preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "root",
      "ssh_password": "abcd1234",
      "shutdown_command": "systemctl poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],
      "format": "ova"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "debian8-64",
      "iso_url": "{{user `mirror`}}/{{user `version`}}/amd64/iso-cd/debian-{{user `version`}}-amd64-netinst.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-debian-{{user `version`}}-amd64-{{build_type}}",
      "vm_name": "packer-debian-{{user `version`}}-amd64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "net.ifnames=0 ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9.2/preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "root",
      "ssh_password": "abcd1234",
      "shutdown_command": "systemctl poweroff",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      }
    }
  ],
  "provisioners" : [
    {
      "type": "file",
      "source": "firstboot",
      "destination": "/etc/init.d/firstboot"
    },
    {
      "type": "shell",
      "inline": [
        "echo 'deb http://apt-cacher:9999/osds stretch osds/main' > /etc/apt/sources.list.d/apt-cacher-stretch-osds.list",
        "apt-get update && apt-get install puppet-agent"
      ]
    }
  ],
  "post-processors" : [
    [
      {
        "type": "vsphere",
        "only": ["vmware-iso"],
        "host": "p1vc1a.gva.secutix.net",
        "cluster": "HRP",
        "datacenter": "HRP",
        "datastore": "V-2017-TEMPLATES-2",
        "username": "jte@secutix.net",
        "password": "{{user `password`}}",
        "vm_name": "PackerPOC",
        "vm_folder": "/PackerPOC",
        "vm_network": "VM Network 1030",
        "insecure": true
      }
    ]
  ]
}
