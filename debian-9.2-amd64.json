{
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "8192",
    "headless": "false",
    "iso_checksum": "ec78bc48b48d676775b60eda41528ec33c151c2ce7414a12b13d9b73d34de544",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://cdimage.debian.org/debian-cd/",
    "ssh_timeout": "60m"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "iso_url": "{{user `mirror`}}/9.2.1/amd64/iso-cd/debian-9.2.1-amd64-netinst.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-debian-9.2-amd64-{{build_type}}",
      "vm_name": "packer-debian-9.2-amd64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "net.ifnames=0 ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9.2/preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],
      "format": "ova"
  }
  ],
  "post-processors": [
    {
      "type": "amazon-import",
      "region": "eu-west-1",
      "s3_bucket_name": "test-jte",
      "license_type": "BYOL",
      "tags": { "Description": "packer amazon import " }
    }
  ]
}
